@model VegetableShop.Data.Entitis.Customer
@{
	ViewData["title"] = "Create";
}
<h1>Create</h1>
<h3 style="align-content:center">@ViewBag.error</h3>
<form asp-action="Create" method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<div>
		<label asp-for="Name"></label>
		<input asp-for="Name"/>
		<span asp-validation-for="Name"></span>
	</div>
	<div>
		<label asp-for="Email"></label>
		<input asp-for="Email" />
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="Address"></label>
		<input asp-for="Address" />
		<span asp-validation-for="Address"></span>
	</div>
	<div>
		<label asp-for="NumberPhone"></label>
		<input asp-for="NumberPhone" />
		<span asp-validation-for="NumberPhone"></span>
	</div>
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName" />
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password" type="password" />
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<label asp-for="Remember"></label>
		<input asp-for="Remember" type="checkbox" />
		<span asp-validation-for="Remember"></span>
	</div>
	<div>
		<input type="submit" value="Create" />
	</div>
</form>
