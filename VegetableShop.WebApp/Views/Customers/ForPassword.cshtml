@model VegetableShop.Data.Entitis.Customer
@{
	ViewData["title"] = "ForPassword";
}
<h1>ForPasswordogin</h1>
<h3 style="align-content:center">@ViewBag.error</h3>
<form asp-action="ForPassword" method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName"  />
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Email"></label>
		<input asp-for="Email"  />
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password"  type="password"/>
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<input value="ForPassword" type="submit" />
	</div>
</form>
